<%= form_for(@post) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br>
  <%= f.label :content %>
  <%= f.text_field :content %>
  <br>
  <p>Categories:</p>
  
  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %>

  <%= f.fields_for :categories do |cf| %>
    <%= cf.text_field :name, placeholder: "New Category?" %>
  <% end %>
  
  <p><%= f.submit %></p>
<% end %>
  
